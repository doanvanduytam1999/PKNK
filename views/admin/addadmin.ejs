
<%- include('../include/header.ejs') %>
<link rel="stylesheet" href="/css/styles.css">
</head>  
<body>
  <%- include('../include/navagation') %>
    <main class="page-content">
      <%- include('../include/menu') %>
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-6 ">
                    <div class="card">
                        <div class="card-header">
                          Add User Admin
                        </div>
                        <div class="card-body">
                            <form class="form-add-admin" action="/admin/add-admin" method="POST" enctype="application/x-www-form-urlencoded">
                                <div class="form-group">
                                    <label for="username">User name</label>
                                    <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter username" name="username">
                                  </div>
                                  <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp"  placeholder="Enter email" name="email">
                                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                  </div>
                                  <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control" id="password"  placeholder="Password" name="password">
                                  </div>
                                  <div class="form-group">
                                      <label for="confirmPassword">Confirm Password</label>
                                      <input type="password" class="form-control" id="passwordConfirm"  placeholder="Confirm Password" name="passwordConfirm">
                                  </div>
                                  <label class="my-1 mr-2" for="role">Role For User Admin</label>
                                  <select class="custom-select my-1 mr-sm-2" id="role" name="role">
                                      <option selected>Choose role for user admin</option>
                                      <option value="Admin">Admin</option>
                                      <option value="LeTan">Lễ Tân</option>
                                      <option value="BacSi ">Bác sĩ</option>
                                  </select>
                                  <div class="form-group-inline">
                                      <button type="submit"class="btn btn-primary">Thêm Tài Khoản</button>
                                      <a href="/admin/list-admin" class="btn btn-danger">Trở về</a>
                                  </div>
                              </form>
                        </div>
                      </div>
                </div>
            </div>
        <hr>
        <%- include('../include/footer.ejs') %>   
        </div>
    </main>
  </div>
  <%- include('../include/script.ejs') %>
<%- include('../include/end.ejs') %>