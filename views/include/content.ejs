<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="text-content">
            <h2>Đặt Lịch Hẹn</h2>
            <p>Quý khách vui lòng để lại thông tin</p>
        </div>
          <div class="card shadow from">
            <form action="/datlich" method="POST" enctype="multipart/form-data">
              <div class="from-data">
                <input type="text" name="username" placeholder="Nhập tên..." required>
                
              </div>
              <div class="from-data">
                <input type="text" name="phoneNumber" placeholder="Nhập số điện thoại..." required>
              </div>
              <div class="from-data">
                <input type="text" name="email"  placeholder="Nhập gmail..." required>
              </div>
              <div class="from-data" >
                <input type="text" name="time"  id="start" placeholder="Chọn lịch hẹn...">
                  
              </div>
              <div class="from-data">
                <select id="id_name" name="service">
                  <option value="0">Chọn dịch vụ...</option>
                  <option value="3">Bọc răng xứ</option>
                  <option value="4">Niền răng</option>
                  <option value="5">Tẩy trắng răng</option>
                  <option value="6">Khác</option>
                  
                </select>
                <select id="id_name" name="city">
                  <option value="0">Chọn thành phố...</option>
                  <option value="3">Hà Nội</option>
                  <option value="4">Hồ Chí Minh</option>
                  <option value="5">Đồng Tháp</option>
                  <option value="6">Bạc Liêu</option>
                </select>
                <select id="id_name" name="district">
                  <option value="0">Chọn chi nhánh...</option>
                  <option value="3">Quận 8</option>
                  <option value="4">Quận 7</option>
                  <option value="5">Quận 3</option>
                  <option value="6">Quận 2</option>
                  <option value="7">Quận 1</option>
                </select>
              </div>
              <div class="from-data">
                <input type="text" placeholder="Ghi chú... ">
              </div>
              <button class="btn-danger" type="submit">Đặt Lịch</button>
             </div>
            </form>
          </div>
        
        </div>
      </div>
    </div>
  </div>
</div>

