
<%- include('../include/header_customer') %>
<link rel="stylesheet" href="/css/content.css">

</head>
<body>
  <%- include('../include/menu_customer') %> 
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="text-content">
              <h2>Đặt Lịch Hẹn</h2>
              <p>Quý khách vui lòng để lại thông tin</p>
          </div>
            <div class="card shadow from">
              <form action="/datlich" method="POST" enctype="application/x-www-form-urlencoded">
                
               <input hidden value="<%= KiemTralogin.id %>" name="id">
                <div class="from-data">
                 
                  <select class="loaiservice" id="id_name" name="loaiservice">
                    <option  value="0">Chọn loại dịch vụ...</option>
                    <% Service.forEach(function(element){ %>
                      <% element.serviceItems.forEach(function(a){ %>
                      <option class="loaiDV" value="<%= a.name  %>"><%= a.name  %></option>
                    <% }); %>
                    <% }); %> 
                   
                    
                  </select>
                 
                 <br>
          
                  <select class="district" id="id_name" name="city">
                    <option value="0">Chọn thành phố</option>
                    <option value="Hà Nội">Hà Nội</option>
                    <option value="Hồ Chí Minh">Hồ Chí Minh</option>
                    <option value="Đồng Tháp">Đồng Tháp</option>
                    <option value="Bạc Liêu">Bạc Liêu</option>
                  </select>
                  <select class="district" id="id_name" name="district">
                    <option value="0">Chọn chi nhánh</option>
                    <option value="Quận 8">Quận 8</option>
                    <option value="Quận 7">Quận 7</option>
                    <option value="Quận 3">Quận 3</option>
                    <option value="Quận 2">Quận 2</option>
                    <option value="Quận 1">Quận 1</option>
                  </select>
                  <select class="district" id="id_name" name="agency">
                    <option value="0">Chọn địa chỉ</option>
                    <option value="">34 phường 16, quận 8</option>
                    <option value="">a</option>
                    <option value="">b</option>
                    <option value="">c</option>
                    <option value="">c</option>
                  </select>
                </div>
                <div class="from-data" >
                  <input type="text" name="time"  id="start" placeholder="Chọn lịch hẹn...">
                    
                </div>
                <div class="from-data">
                  <input type="text" placeholder="Ghi chú... " name="note">
                </div>
                <button class="btn-danger" type="submit">Đặt Lịch</button>
               </div>
              </form>
            </div>
          
          </div>
        </div>
      </div>
    </div>
  </div>
     
  <%- include('../include/footer') %>
  <%- include('../include/script_customer') %>
  <%- include('../include/end') %>




  

