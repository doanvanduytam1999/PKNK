<%- include('../include/header_customer') %>
<link rel="stylesheet" href="/css/sign-in.css">
</head>
<body>
  <%- include('../include/menu_customer') %>
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="warp  shadow-lg">
            <h2>Đăng kí
            </h2>
              <form class="form_sign_in" action="/sign-up" method="POST" enctype="application/x-www-form-urlencoded">
                <input type="text" placeholder="Nhập họ tên của bạn..." id="name" name="hovaten">
                <label for="name" id="warning_name" style="color: red;"></label>
                <input type="text"  id="username" name="username" placeholder="Nhập tên tài khoản...">
                <label for="username" id="warning_username" style="color: red;"></label>
                <input type="gmail" placeholder="Nhập gmail của bạn..." id="email" name="email">
                <label for="email" id="warning_email" style="color: red;"></label>
                <input type="password" placeholder="Nhập mật khẩu..." id="password" name="password">
                <label for="password" id="warning_password" style="color: red;"></label>
                <input type="password" placeholder="Nhập lại mật khẩu..." name="passwordConfirm" id="passwordConfirm">
                <label for="passwordConfirm" id="warning_passwordConfirm" style="color: red;"></label>
                <input type="text" placeholder="Nhập số điện thoại..." id="phone"  name="phone">
                <label for="phone" id="warning_phone" style="color: red;"></label>
                <input type="submit" value="Đăng kí tài khoản">
                <a href="/login">Đã có tài khoản ? Đăng nhập ngay !</a>
              </form>
          </div> 
        </div>
      </div>
    </div>   
  </div>
  <%- include('../include/footer') %>
  <script type="text/javascript" src="/js/check_form.js"></script>
  <%- include('../include/end') %>
