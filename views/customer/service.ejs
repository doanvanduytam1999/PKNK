<%- include('../include/header_customer') %>
<style>
  .card{
    margin-top: 100px;
  }
  .title span{
  color: #4CCEE8;
  }
.title{
  color: #000;
  font-size: 30px;
  text-transform: uppercase;
  font-weight: 700;
  }
  .content{
    font-size: 30px;
  }
</style>
</head>
<body>
  <%- include('../include/menu_customer') %>
    <div class="container-fluid">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header text-center">
                <span class="content">Bảng giá dịch vụ tại </span><span class="title">Nha<span>Khoa</span></span>
              </div>
              <div class="card-body table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th scope="col">Dịch vụ</th>
                      <th scope="col">Đơn vị</th>
                      <th scope="col">Giá</th>
                      <th scope="col">Bảo hành</th>
                    </tr>
                  </thead>
                  <tbody class="tbody" >
                    <% Service.forEach(function(element) { %>
                      <th colspan="4" class="text-center"><%= element.serviceName %></th>
                      <% element.serviceItems.forEach(function(temp) { %>
                        <tr>
                          <td><%= temp.name %></td>
                          <td><%= temp.unit %></td>
                          <td><%= temp.price %></td>
                          <td><%= temp.guarantee %></td>
                        </tr>
                        
                      <% }); %>
                    <% }); %>
                    
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>








  <%- include('../include/footer') %>
  <%- include('../include/script') %>
  <%- include('../include/end') %>